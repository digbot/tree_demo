<ul class="breadcrumb">
    {% for node in path %}
        {% if loop.last %}
        <li class="active" >{{ node.title }}</li>
        {% else %}
        <li><a href="{{ path('index', { 'id': node.id }) }}">{{ node.title }}</a> <span class="divider">/</span></li>
        {% endif %}
    {% endfor %}
</ul>
